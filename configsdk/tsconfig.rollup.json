{
  "extends": "@tsconfig/node18/tsconfig.json",
  "files": ["rollup.config.ts"],
  "compilerOptions": {
    "outDir": "dist/rollup",
    "module": "ES2020",
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "strict": true
  }
}
